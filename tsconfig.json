{
  "include": [".storybook/*", "**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "types": ["vite/client"],
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "allowSyntheticDefaultImports": true,
    "jsx": "react"
  }
}
